{
	"name": "node.api.express",
	"version": "0.0.1",
	"description": "A simple Node.js API, written using Typescript and Express",
	"main": "dist/index.js",
	"author": "Nicolas Pearson",
	"repository": {
		"url": "https://github.com/nicolaspearson/node.api.express.git",
		"type": "git"
	},
	"license": "MIT",
	"scripts": {
		"start": "npm run build && npm run watch",
		"build": "rm -rf ./dist && npm run build:ts && npm run tslint && npm run copy:env",
		"build:ts": "tsc --rootDir ./src/",
		"debug": "npm run build && npm run watch:debug",
		"serve": "nodemon dist/index.js --delay 3",
		"serve:debug": "nodemon --inspect=5858 dist/index.js",
		"watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve\"",
		"watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve:debug\"",
		"watch:ts": "tsc -w",
		"tslint": "tslint --fix -c tslint.json -p tsconfig.json",
		"clean": "rm -rf node_modules && npm install",
		"copy:env": "cp ./src/env/*.json ./dist/env/",
		"test": "jest",
		"test:coverage": "npm test -- --coverage",
		"test:badges": "npm run test:coverage && jest-coverage-badges",
		"typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./src/db/config.db.ts",
		"ncu": "ncu",
		"ncu:u": "ncu -u"
	},
	"dependencies": {
		"bcrypt": "~4.0.0",
		"body-parser": "~1.19.0",
		"boom": "~7.3.0",
		"class-transformer": "~0.2.3",
		"class-validator": "~0.11.0",
		"express": "~4.17.1",
		"jsonwebtoken": "~8.5.1",
		"module-alias": "~2.2.2",
		"nconf": "~0.10.0",
		"pg": "~7.18.1",
		"reflect-metadata": "~0.1.13",
		"typeorm": "~0.2.22",
		"winston": "~3.2.1"
	},
	"devDependencies": {
		"@types/bcrypt": "~3.0.0",
		"@types/boom": "~7.3.0",
		"@types/dotenv": "~8.2.0",
		"@types/express": "~4.17.2",
		"@types/jest": "~25.1.2",
		"@types/jsonwebtoken": "~8.3.7",
		"@types/nconf": "~0.10.0",
		"@types/node": "~13.7.0",
		"@types/supertest": "~2.0.8",
		"concurrently": "~5.1.0",
		"dotenv": "~8.2.0",
		"jest": "~25.1.0",
		"jest-coverage-badges": "~1.1.2",
		"nodemon": "~2.0.2",
		"npm-check-updates": "~4.0.1",
		"supertest": "~4.0.2",
		"ts-jest": "~25.2.0",
		"ts-node": "~8.6.2",
		"tslint": "~6.0.0",
		"typescript": "~3.7.5"
	},
	"_moduleAliases": {
		"@app": "dist/app",
		"@controllers": "dist/controllers",
		"@db": "dist/db",
		"@dto": "dist/dto",
		"@entities": "dist/entities",
		"@env": "dist/env/index",
		"@interfaces": "dist/interfaces",
		"@logger": "dist/logger/index",
		"@middleware": "dist/middleware",
		"@repositories": "dist/repositories",
		"@services": "dist/services",
		"@utils": "dist/utils"
	}
}
