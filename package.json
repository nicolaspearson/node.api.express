{
	"name": "node.api.express",
	"version": "0.0.1",
	"description": "A simple Node.js API, written using Typescript and Express",
	"main": "dist/index.js",
	"author": "Nicolas Pearson",
	"repository": {
		"url": "https://github.com/nicolaspearson/node.api.express.git",
		"type": "git"
	},
	"license": "MIT",
	"scripts": {
		"start": "npm run build && npm run watch",
		"build": "rm -rf ./dist && npm run build:ts && npm run tslint && npm run copy:env",
		"build:ts": "tsc --rootDir ./src/",
		"debug": "npm run build && npm run watch:debug",
		"serve": "nodemon dist/index.js --delay 1",
		"serve:debug": "nodemon --inspect=5858 dist/index.js",
		"watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve\"",
		"watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve:debug\"",
		"watch:ts": "tsc -w",
		"tslint": "tslint --fix -c tslint.json -p tsconfig.json",
		"clean": "rm -rf node_modules && npm install",
		"copy:env": "cp ./src/env/*.json ./dist/env/",
		"test": "jest",
		"test:coverage": "npm test -- --coverage",
		"test:badges": "npm run test:coverage && jest-coverage-badges"
	},
	"dependencies": {
		"boom": "~7.3.0",
		"express": "~4.16.4",
		"module-alias": "~2.2.0",
		"nconf": "~0.10.0",
		"winston": "~3.2.1"
	},
	"devDependencies": {
		"@types/boom": "~7.2.1",
		"@types/dotenv": "~6.1.0",
		"@types/express": "~4.16.1",
		"@types/jest": "~24.0.11",
		"@types/nconf": "~0.10.0",
		"@types/node": "~11.12.0",
		"@types/supertest": "~2.0.7",
		"concurrently": "~4.1.0",
		"dotenv": "~7.0.0",
		"jest": "~24.5.0",
		"jest-coverage-badges": "~1.1.2",
		"nodemon": "~1.18.10",
		"supertest": "~4.0.2",
		"ts-jest": "~24.0.0",
		"ts-node": "~8.0.3",
		"tslint": "~5.14.0",
		"typescript": "~3.3.4000"
	},
	"_moduleAliases": {
		"@actions": "dist/actions",
		"@db": "dist/db",
		"@env": "dist/env/index",
		"@logger": "dist/logger",
		"@models": "dist/models",
		"@repositories": "dist/repositories",
		"@services": "dist/services",
		"@utils": "dist/utils"
	}
}
